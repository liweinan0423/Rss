<% if notice %><p id="notice"><%= notice %></p> <% end %>

<p>
  <b>Name:</b>
  <%= @channel.name %>
</p>

<p>
  <b>Description:</b>
  <%= @channel.description %>
</p>

<h2>Posts</h2>
<ul>
<% for post in @channel.posts %>
  <li>
  	<%= post.title %>
  	<%= link_to 'View', channel_post_path(post.channel, post) %> | 
  	<%= link_to 'Edit', edit_channel_post_path(post.channel, post) %>
  </li>
<% end %>
</ul>

<h2>Subscriptions</h2>
<ul>
	<% for subscription in @channel.subscriptions %>
	<li><%= subscription.username %></li>
	<% end %>
</ul>
<%= link_to 'Edit', edit_channel_path(@channel) %> |
<%= link_to 'Back', channels_path %>
